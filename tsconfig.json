{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./server",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "server/**/*",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}